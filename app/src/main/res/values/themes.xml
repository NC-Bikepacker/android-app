<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bikepacker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_main</item>
        <item name="colorPrimaryVariant">@color/purple_main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_main</item>
        <item name="colorSecondaryVariant">@color/grey_main</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Bikepacker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Bikepacker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Button.Grey" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/bikepacker_purple</item>
    </style>

    <style name="CustomRatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">47dip</item>
    </style>

    <style name="Theme.Bikepacker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Button theme -->
    <style name="PurpleButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/purple_500</item>
        <item name="colorControlHighlight">@color/purple_700</item>
    </style>

    <style name="deleteButton" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="colorButtonNormal">@color/red_off</item>
        <item name="colorControlHighlight">@color/red_on</item>
    </style>

    <style name="whiteAndPurpleButton" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="colorControlHighlight">@color/tabIconColor</item>
    </style>

    <!--Tab theme-->
    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>